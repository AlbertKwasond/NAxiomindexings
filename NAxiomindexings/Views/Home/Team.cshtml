@model IEnumerable<DMS.Models.TeamContext>

@{
    ViewData["Title"] = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Page Title Start -->
<section class="page-title title-bg7">
    <div class="d-table">
        <div class="d-table-cell">
            <h2>Our Team</h2>
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li>Team</li>
            </ul>
        </div>
    </div>
    <div class="lines">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>
</section>
<!-- Page Title End -->
<!-- Team Section Start -->
<section class="candidate-style-two pt-100 pb-70">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="candidate-card">
                        <div class="candidate-img">
                            <img src="@Url.Content("~/assets/img/team/")@item.ImageUrl" alt="candidate image" height="300">
                        </div>
                        <div class="candidate-text">
                            <h3>
                                @Html.DisplayFor(model => item.Name)

                            </h3>
                            <ul>
                                <li>
                                    @Html.DisplayFor(model => item.Position)
                                </li>
                            </ul>
                        </div>
                        <div class="candidate-social">
                            <a href="#" target="_blank"><i class="bx bxl-facebook"></i></a>
                            <a href="#" target="_blank"><i class="bx bxl-twitter"></i></a>
                            <a href="#" target="_blank"><i class="bx bxl-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Team Section End -->
