@model AxiomAuthor.ViewModel.JournalsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"> Journals</h4>


    <!-- Style variation -->
    <p>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#basicModal">
            Create New Journal
        </button>
    </p>
    <div class="modal fade" id="basicModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel1">New Journals</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <partial name="_NewJournals" />
                </div>

            </div>
        </div>
    </div>


    <div class="modal fade" id="editModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel1">Edit Journals</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="editPartialContainer"></div>

                </div>

            </div>
        </div>
    </div>

    <!-- Outline -->

    <div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
        <partial name="_ClientCard" />


    </div>
    <!--/ Style variation -->


</div>
@section Scripts {


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Assuming your file input for PDF has an id of 'pdfInput'
            $('#pdfInput').change(function () {
                var fileSize = this.files[0].size; // in bytes

                // Convert to megabytes
                var fileSizeInMB = fileSize / (1024 * 1024);

                // Check if the file size exceeds the limit (20MB)
                if (fileSizeInMB > 20) {
                    alert('PDF file size exceeds the maximum allowed limit of 20MB.');
                    // Optionally, clear the file input
                    // $('#pdfInput').val('');
                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            // Edit button click event
            $('.edit-item-btn').on('click', function () {
                var id = $(this).data('id');
                var url = '@Url.Action("Edit", "Journals")/' + id;

                $.get(url, function (data) {
                    $('#editPartialContainer').html(data);
                    $('#editModal').modal('show');
                });
