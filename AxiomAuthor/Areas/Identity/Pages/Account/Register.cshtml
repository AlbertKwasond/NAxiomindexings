<body>
    <!-- Content -->

    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y">
            <div class="authentication-inner">
                <!-- Register Card -->
                <div class="card">
                    <div class="card-body">
                        <!-- Logo -->
                        <div class="app-brand justify-content-center">
                            <a href="index.html" class="app-brand-link gap-2">
                                <div class="justify-content-center">
                                    <a href="index.html" class="app-brand-link gap-2">
                                        <img src="~/assets/img/logo/logo.png" alt="logo" width="" height="50%">

                                    </a>

                                </div>
                            </a>
                        </div>
                        <!-- /Logo -->
                        <div class="text-center">
                            <h5 class="mb-2">Join the Author community – sign up today!" </h5>

                        </div>
                        <div class="mb-3">
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="mb-3">
                                    <label for="username" class="form-label">First Name</label>
                                    <input type="text" asp-for="Input.FirstName" id="FirstName" name="FirstName" class="form-control" aria-required="true" placeholder="Enter your first name" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                                </div>
                                <div class="mb-3">
                                    <label for="middlename" class="form-label">Middle Name</label>
                                    <input type="text" asp-for="Input.MiddleName" id="MiddleName" name="MiddleName" class="form-control" placeholder="Enter your middle name" />
                                    <span asp-validation-for="Input.MiddleName" class="text-danger"></span>

                                </div>
                                <div class="mb-3">
                                    <label for="last-name" class="form-label">Last Name</label>
                                    <input type="text" asp-for="Input.LastName" id="LastName" name="LastName" class="form-control" aria-required="true" placeholder="Enter your last name" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>

                                </div>
                                <div class="mb-3">
                                    <label for="gender" class="form-label">Gender</label>
                                    <select asp-for="Input.Gender" id="Gender" name="Gender" class="select2 form-select" data-allow-clear="true">
                                        <option value="">Select your gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                    <span asp-validation-for="Input.Gender" class="text-danger"></span>

                                </div>

                                <div class="mb-3">
                                    <label for="username" class="form-label">Date Of Birth</label>
                                    <input type="date" asp-for="Input.DateOfBirth" id="DateOfBirth" name="DateOfBirth" class="form-control" aria-required="true" placeholder="Enter your Date Of Birth" autofocus />
                                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>

                                </div>

                                <div class="mb-3">
                                    <label for="contact" class="form-label">Contact</label>
                                    <input type="tel" asp-for="Input.Contact" id="Contact" name="Contact" class="form-control" aria-required="true" placeholder="Please enter a valid phone number" autofocus />
                                    <span asp-validation-for="Input.Contact" class="text-danger"></span>

                                </div>
                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" asp-for="Input.Username" id="username" name="username" class="form-control" aria-required="true" placeholder="Enter your username" autofocus />
                                    <span asp-validation-for="Input.Username" class="text-danger"></span>

                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="text" asp-for="Input.Email" id="Email" name="Email" class=" form-control" aria-required="true" placeholder="Enter your email" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3 form-password-toggle">
                                    <label class="form-label" for="password">Password</label>
                                    <div class="input-group input-group-merge">
                                        <input asp-for="Input.Password" id="Password" name="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="mb-3 form-password-toggle">
                                    <label class="form-label" for="password">Confirm Password</label>
                                    <div class="input-group input-group-merge">
                                        <input asp-for="Input.ConfirmPassword" id="ConfirmPassword" name="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />

                                    </div>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
