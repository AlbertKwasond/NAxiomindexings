                                    <span asp-validation-for="Input.CountryOfOrigin" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="address" class="form-label">Address</label>
                                    <input type="text" asp-for="Input.Address" id="Address" name="Address" class=" form-control" aria-required="true" placeholder="Enter your Address" />
