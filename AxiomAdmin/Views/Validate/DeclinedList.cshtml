@model IEnumerable<DMS.Models.Journals>

@{
    ViewData["Title"] = "DeclinedList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Validate /</span> Declined List</h4>


    <!-- Bootstrap Table with Header - Footer -->
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalPages)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Authors)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelItem => item.Title)</strong></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categories.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalPages)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Authors.FullName)
                            </td>
                            <td>
                                <span class="badge bg-label-warning me-1">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </span>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- Bootstrap Table with Header - Footer -->


</div>
